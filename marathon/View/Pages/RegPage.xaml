<Page x:Class="marathon.View.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:marathon.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Login" Style="{StaticResource NavigationButton}" FontWeight="DemiBold" Foreground="#2E2E2E" Padding="20" Margin="5" FontSize="15" Click="LoginClick">Я учавствовал ранее</Button>
            <Button Style="{StaticResource NavigationButton}" FontWeight="DemiBold" Foreground="#2E2E2E" Padding="20" Margin="5" FontSize="15">Я новый участник</Button>
        </StackPanel>
    </Grid>
</Page>
